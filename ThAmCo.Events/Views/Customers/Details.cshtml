@model ThAmCo.Events.Data.Customer


@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            <b>Events:</b>
        </dt>
        @*Using a for each loop to insert data for booking and attendance*@
        <dd>
            @foreach (var item in Model.Bookings)
            {
            <dl>
                <dd> Event Name: @Html.DisplayFor(model => item.Event.Title)</dd>
                <dd> Attendance: @Html.DisplayFor(model => item.Attended)</dd>
            </dl>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>